---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickyOffer from '../components/StickyOffer.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "R&D Bouwgroep - Waar luxe en comfort samenkomen in uw badkamer, zwembad of wellnessruimte." } = Astro.props;
---

<!doctype html>
<html lang="nl">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<StickyOffer />
		<Footer />

	</body>
</html>
