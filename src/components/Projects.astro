---
const projects = [
  {
    title: "Badkamer Renovatie",
    location: "Vlissingen",
    image: "https://www.rd-bouwgroep.nl/wp-content/uploads/2024/06/4.jpg"
  },
  {
    title: "Nieuwbouw Wellness",
    location: "Middelburg",
    image: "https://www.rd-bouwgroep.nl/wp-content/uploads/2024/06/Banner-foto-1.jpg"
  },
  {
    title: "Marmeren Vloer",
    location: "Goes",
    image: "https://www.rd-bouwgroep.nl/wp-content/uploads/2024/06/1-4.jpg" 
  },
  {
    title: "Toilet Design",
    location: "Domburg",
    image: "https://www.rd-bouwgroep.nl/wp-content/uploads/2024/06/2-4.jpg" 
  }
];
---

<section id="projects" class="section">
  <div class="container">
    <div class="section-header">
      <h2 class="text-dark">Recent <span class="text-primary">Werk</span></h2>
      <p class="subtitle text-muted">Bekijk een selectie van onze projecten</p>
    </div>

    <div class="project-list">
      {projects.map((project, index) => (
        <div class="project-row">
          <div class="project-img">
             <img src={project.image} alt={project.title} />
          </div>
          <div class="project-content">
            <span class="location text-primary">{project.location}</span>
            <h3>{project.title}</h3>
            <a href="#" class="btn-link">Bekijk Project âžœ</a>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-xl">
      <a href="#" class="btn btn-outline">Alle Projecten</a>
    </div>
  </div>
</section>

<style>
  .section-header {
    margin-bottom: 4rem;
    text-align: center;
  }
  
  .subtitle {
    margin-top: 0.5rem;
    font-size: 1.1rem;
    color: var(--color-text-muted);
  }

  .project-list {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .project-row {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 3rem;
    align-items: center;
  }
  
  /* Zig-zag layout */
  .project-row:nth-child(even) {
    grid-template-columns: 1fr 1.5fr;
  }
  .project-row:nth-child(even) .project-img {
    grid-column: 2;
    grid-row: 1;
  }
  .project-row:nth-child(even) .project-content {
    grid-column: 1;
    grid-row: 1;
    text-align: right;
  }
  .project-row:nth-child(even) .project-content .btn-link {
    margin-left: auto;
    margin-right: 0;
  }

  .project-img {
    height: 400px;
    border-radius: 4px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    position: relative;
  }
  
  .project-img::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.1);
    transition: background 0.3s;
  }
  
  .project-row:hover .project-img::after {
    background: rgba(0,0,0,0);
  }

  .project-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .project-row:hover .project-img img {
    transform: scale(1.03);
  }

  .project-content h3 {
    font-size: 2.5rem;
    margin: 0.5rem 0 1.5rem;
    color: var(--color-dark);
  }

  .location {
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.9rem;
  }

  .btn-link {
    display: inline-block;
    font-weight: 600;
    color: var(--color-dark);
    position: relative;
    padding-bottom: 2px;
  }
  
  .btn-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-primary);
    transition: width 0.3s;
  }
  
  .project-row:hover .btn-link::after {
    width: 100%;
  }

  .mt-xl {
    margin-top: 4rem;
  }

  @media (max-width: 900px) {
    .project-row, .project-row:nth-child(even) {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    .project-row:nth-child(even) .project-img {
      grid-column: 1;
      grid-row: 1;
    }
    .project-row:nth-child(even) .project-content {
      grid-column: 1;
      grid-row: 2;
      text-align: left;
    }
    .project-img {
      height: 300px;
    }
    .project-content h3 {
      font-size: 1.8rem;
    }
  }
</style>
