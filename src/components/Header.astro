<header id="main-header">
  <div class="header-container container">
    
    <!-- Top Left: Independent Logo Block -->
    <a href="/" class="logo-wrapper">
      <img src="https://www.rd-bouwgroep.nl/wp-content/uploads/2024/06/RenD-hoofdlogo.png" alt="R&D Bouwgroep" class="logo-img" />
    </a>

    <!-- Top Right: Interface Pill Navigation -->
    <div class="nav-pill-wrapper">
      <nav id="main-nav">
        <ul>
          <li><a href="/over-ons" class="nav-link">Over<span class="plus-icon">+</span></a></li>
          <li><a href="/diensten" class="nav-link">Diensten<span class="plus-icon">+</span></a></li>
          <li><a href="/#recent-werk" class="nav-link">Projecten<span class="plus-icon">+</span></a></li>
          <li><a href="/vacatures" class="nav-link">Vacatures<span class="plus-icon">+</span></a></li>
        </ul>
      </nav>
      
      <!-- The main 'Menu' / Contact action built into the pill -->
      <a href="/offerte-aanvragen" class="nav-action-btn">
        <span class="btn-text">Offerte</span>
        <svg class="action-arrow" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
      </a>

      <!-- Mobile ONLY toggle, hidden on desktop -->
      <button id="mobile-menu-toggle" class="mobile-only-btn" aria-label="Toggle Menu">
        <span class="hamburger-box">
          <span class="hamburger-inner"></span>
        </span>
        <span class="menu-text-mobile">Menu</span>
      </button>
    </div>

  </div>
</header>

<div id="mobile-menu-overlay">
  <nav>
    <ul>
      <li><a href="/over-ons" class="mobile-link">Over</a></li>
      <li><a href="/diensten" class="mobile-link">Diensten</a></li>
      <li><a href="/#recent-werk" class="mobile-link">Projecten</a></li>
      <li><a href="/vacatures" class="mobile-link">Vacatures</a></li>
      <li><a href="/offerte-aanvragen" class="mobile-link text-primary">Contact</a></li>
    </ul>
  </nav>
</div>

<style>
  /* -----------------------------------
     HEADER STRUCTURAL LAYOUT
     ----------------------------------- */
  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    pointer-events: none; /* Let clicks pass through empty space */
    padding: 2.5rem 0; /* Vertical spacing only, horizontal handled by container */
    transition: padding 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    width: 100%;
  }

  /* -----------------------------------
     LOGO BLOCK (TOP LEFT)
     ----------------------------------- */
  .logo-wrapper {
    pointer-events: auto;
    width: 130px;
    background: transparent;
    padding: 1rem 0;
    transition: transform 0.3s ease, width 0.3s ease, padding 0.3s ease;
    display: flex;
    align-items: center;
  }

  .logo-wrapper:hover {
    transform: translateY(-2px);
  }

  .logo-img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* -----------------------------------
     NAV PILL (TOP RIGHT)
     ----------------------------------- */
  .nav-pill-wrapper {
    pointer-events: auto;
    background: rgba(30, 30, 30, 0.6); /* Darker, glassy pill like reference */
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 50px;
    display: flex;
    align-items: center;
    padding: 0.5rem 0.5rem 0.5rem 2rem; /* Asymmetrical padding to hug the button */
    box-shadow: 0 10px 40px rgba(0,0,0,0.15);
    transition: all 0.4s ease;
  }

  nav ul {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
    list-style: none;
    margin-right: 1.5rem; /* Space before the button */
  }

  .nav-link {
    font-family: var(--font-heading, sans-serif);
    font-size: 0.85rem;
    font-weight: 500;
    color: #ffffff;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.3rem;
    position: relative;
    padding: 0.25rem 0;
    transition: color 0.3s ease;
  }

  /* The little '+' icons from the reference */
  .plus-icon {
    font-size: 0.75rem;
    font-weight: 400;
    color: var(--color-primary, #e30613);
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .nav-link:hover {
    color: rgba(255,255,255,0.7);
  }
  .nav-link:hover .plus-icon {
    opacity: 1;
  }

  /* Highlight bar under active/hover */
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0%;
    height: 1px;
    background-color: var(--color-primary, #e30613);
    transition: width 0.3s ease;
  }
  .nav-link:hover::after {
    width: 100%;
  }

  /* -----------------------------------
     ACTION BUTTON INSIDE PILL
     ----------------------------------- */
  .nav-action-btn {
    background-color: var(--color-primary, #e30613);
    color: white;
    font-family: var(--font-heading, sans-serif);
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.6rem 1.5rem;
    border-radius: 40px;
    text-decoration: none;
    transition: transform 0.3s ease, background-color 0.3s ease;
  }

  .nav-action-btn:hover {
    background-color: #c7000b; /* Darker red */
    transform: scale(1.02);
  }

  .action-arrow {
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }
  .nav-action-btn:hover .action-arrow {
    transform: translateX(4px);
  }

  /* -----------------------------------
     MOBILE MENU BUTTON
     ----------------------------------- */
  .mobile-only-btn {
    display: none; /* Hidden on desktop */
  }

  /* -----------------------------------
     SCROLLED STATE (Global overrides)
     ----------------------------------- */
  :global(header.scrolled) {
    padding: 1rem 0; /* Shrink vertical padding */
  }

  :global(header.scrolled .nav-pill-wrapper) {
    background: rgba(255, 255, 255, 0.95); /* Flip to light mode pill when scrolling down */
    border: 1px solid rgba(0,0,0,0.05);
    box-shadow: 0 4px 15px rgba(0,0,0,0.05);
  }

  :global(header.scrolled .nav-link) {
    color: #1a1a1a; /* Dark text on light pill */
  }

  :global(header.scrolled .logo-wrapper) {
    opacity: 0;
    pointer-events: none;
    transform: translateY(-10px);
  }


  /* -----------------------------------
     RESPONSIVE (TABLET/MOBILE)
     ----------------------------------- */
  @media (max-width: 1024px) {
    header {
      padding: 1.5rem 0;
    }
    
    #main-nav { 
      display: none; /* Hide standard links */
    }

    .nav-action-btn {
      display: none; /* Hide primary CTA inside header on small screens */
    }

    .nav-pill-wrapper {
      padding: 0.5rem 1.2rem;
      width: auto;
      height: auto;
      border-radius: 40px; 
      background: var(--color-primary, #e30613) !important; /* Forceer altijd de rode knop op mobiel */
      backdrop-filter: blur(10px);
      display: flex;
      align-items: center;
      justify-content: center;
      border: 1px solid rgba(255,255,255,0.1) !important;
    }
    
    :global(header.scrolled) {
      padding: 1rem 0;
    }

    .mobile-only-btn {
      display: flex;
      border: none;
      background: none;
      align-items: center;
      justify-content: center;
      gap: 0.6rem;
      padding: 0;
      margin: 0;
      cursor: pointer;
    }

    .menu-text-mobile {
      color: #ffffff;
      font-family: var(--font-heading, sans-serif);
      font-weight: 600;
      font-size: 0.95rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .hamburger-box {
      width: 20px;
      height: 12px;
      position: relative;
      display: block;
    }
    
    .hamburger-inner, .hamburger-inner::after {
      content: "";
      position: absolute;
      width: 100%;
      height: 2px;
      background-color: #ffffff;
      transition: all 0.3s ease;
      left: 0;
    }

    /* Twee streepjes in plaats van drie */
    .hamburger-inner::before {
      display: none;
    }

    .hamburger-inner { top: 0; }
    .hamburger-inner::after { top: 10px; }

    .mobile-only-btn.active .hamburger-inner { 
      transform: translateY(5px) rotate(45deg); 
    }
    .mobile-only-btn.active .hamburger-inner::after { 
      transform: translateY(-10px) rotate(-90deg); 
    }
  }


  /* -----------------------------------
     MOBILE OVERLAY MENU
     ----------------------------------- */
  #mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: rgba(10, 10, 10, 0.98);
    backdrop-filter: blur(15px);
    z-index: 900;
    padding-top: 8rem;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease;
  }

  #mobile-menu-overlay.active {
    opacity: 1;
    pointer-events: auto;
  }

  #mobile-menu-overlay ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    padding: 0;
  }

  .mobile-link {
    font-family: var(--font-heading, sans-serif);
    font-size: 2.5rem;
    color: white;
    font-weight: 500;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .mobile-link.text-primary {
    color: var(--color-primary, #e30613);
  }

  .mobile-link:hover {
    color: rgba(255,255,255,0.5);
  }
</style>

<script>
  const header = document.getElementById('main-header');
  const toggle = document.getElementById('mobile-menu-toggle');
  const overlay = document.getElementById('mobile-menu-overlay');
  const body = document.body;
  const links = document.querySelectorAll('.mobile-link');

  function updateHeader() {
    if (!header) return;
    
    if (window.scrollY > 50) {
      if (!header.classList.contains('scrolled')) {
        header.classList.add('scrolled');
      }
    } else {
      header.classList.remove('scrolled');
    }
  }

  window.addEventListener('scroll', updateHeader, { passive: true });
  updateHeader();

  if (toggle && overlay) {
    toggle.addEventListener('click', () => {
      const isActive = overlay.classList.toggle('active');
      toggle.classList.toggle('active');
      body.style.overflow = isActive ? 'hidden' : '';
    });

    links.forEach(l => l.addEventListener('click', () => {
      overlay.classList.remove('active');
      toggle.classList.remove('active');
      body.style.overflow = '';
    }));
  }
</script>
