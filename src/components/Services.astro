---
const services = [
  {
    title: "Badkamers",
    description: "Van ontwerp tot realisatie: wij bouwen uw droombadkamer met oog voor detail.",
    image: "https://www.rd-bouwgroep.nl/wp-content/uploads/2024/06/badkamer.jpg",
    link: "#"
  },
  {
    title: "Tegels",
    description: "Exclusieve collectie wand- en vloertegels van topkwaliteit.",
    image: "https://www.rd-bouwgroep.nl/wp-content/uploads/2024/06/zwart-marmer.jpg",
    link: "#"
  },
  {
    title: "Tegelwerken",
    description: "Onze vakkundige tegelzetters zorgen voor een perfect eindresultaat.",
    image: "https://www.rd-bouwgroep.nl/wp-content/uploads/2024/06/3.jpg",
    link: "#"
  },
  {
    title: "Wellness",
    description: "Creëer een oase van rust in uw eigen huis met onze wellness oplossingen.",
    image: "https://www.rd-bouwgroep.nl/wp-content/uploads/2024/06/Banner-foto-2.jpg",
    link: "#"
  }
];
---

<section id="services" class="section bg-light">
  <div class="container">
    <div class="section-header text-center">
      <h2 class="text-dark">Onze <span class="text-primary">Diensten</span></h2>
      <p class="subtitle">Specialist in het hogere segment</p>
    </div>

    <div class="services-grid">
      {services.map(service => (
        <a href={service.link} class="service-card group">
          <div class="card-img">
            <img src={service.image} alt={service.title} />
            <div class="overlay"></div>
            <div class="icon-box">
              <span class="arrow">➜</span>
            </div>
          </div>
          <div class="card-body">
            <h3>{service.title}</h3>
            <p>{service.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .bg-light {
    background-color: var(--color-light-grey);
  }

  .section-header {
    margin-bottom: 4rem;
  }

  .subtitle {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    margin-top: 0.5rem;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background: white;
    border-radius: 4px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .service-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.1);
  }

  .card-img {
    position: relative;
    height: 250px;
    overflow: hidden;
  }

  .card-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .service-card:hover .card-img img {
    transform: scale(1.1);
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(160, 10, 19, 0.8);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .service-card:hover .overlay {
    opacity: 0.2;
  }

  .icon-box {
    position: absolute;
    bottom: 0;
    right: 0;
    background-color: var(--color-primary);
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transform: translate(100%, 100%); /* Hidden initially */
    transition: transform 0.3s ease;
  }

  .service-card:hover .icon-box {
    transform: translate(0, 0);
  }

  .card-body {
    padding: 2rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .card-body h3 {
    margin-bottom: 1rem;
    color: var(--color-dark);
    font-size: 1.25rem;
  }

  .card-body p {
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }
</style>
