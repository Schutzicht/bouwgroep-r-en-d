---
const services = [
  {
    title: "Badkamer Renovatie",
    description: "Complete renovatie van uw badkamer. Wij verzorgen het hele proces, van sloop tot de laatste kitrand.",
    image: "/generated-projects/luxury-bathroom.png",
    link: "/diensten/badkamer-renovatie"
  },
  {
    title: "Tegelwerk",
    description: "Vakkundig tegelwerk voor vloeren, wanden en complexe patronen. Strak en duurzaam resultaat.",
    image: "/generated-projects/tiling-detail.png",
    link: "/diensten/tegelwerk"
  },
  {
    title: "Zwembaden",
    description: "Realisatie van complete zwembaden en wellness ruimtes. Van aanleg tot technische installatie.",
    image: "/generated-projects/indoor-pool.png",
    link: "/diensten/zwembaden"
  },
  {
    title: "Installatiewerk",
    description: "Onze specialisten hebben ruime ervaring in al het benodigde installatiewerk voor uw project.",
    image: "https://www.rd-bouwgroep.nl/wp-content/uploads/2024/06/3.jpg",
    link: "/diensten/installatiewerk"
  }
];
---

<section id="services" class="liquid-services-section">
  <div class="container relative-z">
    <div class="section-header text-center">
      <h2 class="title-liquid text-white">Onze <span class="text-primary">Diensten</span></h2>
      <p class="subtitle brand-accent-text-light">Specialist in het hogere segment</p>
    </div>

    <div class="liquid-grid">
      {services.map(service => (
        <a href={service.link} class="liquid-card group">
          <div class="liquid-bg-img">
            <img src={service.image} alt={service.title} />
          </div>
          <div class="liquid-overlay"></div>
          
          <div class="liquid-content">
            <div class="content-bottom">
              <h3>{service.title}</h3>
              <p class="liquid-desc">{service.description}</p>
              
              <div class="mt-4">
                <span class="btn-pill btn-pill-outline-light">Lees meer &rarr;</span>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .liquid-services-section {
    padding: 10rem 0;
    background-color: #0f0f11; /* Diep, rijk donker, bijna zwart voor optimaal liquid glass effect */
    position: relative;
    overflow: hidden;
  }

  /* Subtiele ambient glow in de background voor extra diepte */
  .liquid-services-section::before {
    content: '';
    position: absolute;
    top: -20%;
    left: -10%;
    width: 50%;
    height: 50%;
    background: radial-gradient(circle, rgba(160, 10, 19, 0.08) 0%, transparent 70%);
    filter: blur(80px);
    z-index: 0;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    width: 100%;
    position: relative;
    z-index: 2;
  }

  .section-header {
    margin-bottom: 6rem;
  }

  .title-liquid {
    font-family: var(--font-heading, sans-serif);
    font-size: 3.5rem;
    font-weight: 500;
    line-height: 1.1;
    color: #ffffff;
    letter-spacing: -0.03em;
    margin-bottom: 1rem;
  }

  .title-liquid span {
    color: var(--color-primary); /* Rood accent */
  }

  .brand-accent-text-light {
    font-family: var(--font-body);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 3px;
    font-size: 0.85rem;
    color: rgba(255,255,255,0.6);
    display: block;
    margin-top: 1.5rem;
  }

  .liquid-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem; /* Iets krappere gap voor een dichte muur vibes */
  }

  /* --- LIQUID CARD STYLING --- */
  .liquid-card {
    position: relative;
    display: flex;
    flex-direction: column;
    border-radius: 24px; /* Extreem zachte, vloeibare hoeken */
    overflow: hidden;
    text-decoration: none;
    aspect-ratio: 4/5; /* Vierkanter formaat zoals gewenst */
    min-height: 340px; /* Fallback */
    /* De "Liquid" border: semi-transparant wit/grijs dat licht opvangt */
    border: 1px solid rgba(255, 255, 255, 0.08); 
    box-shadow: 
      0 20px 50px rgba(0,0,0,0.5),
      inset 0 0 0 1px rgba(255,255,255,0.05); /* Interne reflectie */
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    transform: translateZ(0); /* Force GPU */
  }

  .liquid-card:hover {
    transform: translateY(-10px) scale(1.02);
    border-color: rgba(255, 255, 255, 0.2);
    box-shadow: 
      0 30px 60px rgba(0,0,0,0.6),
      0 0 40px rgba(160, 10, 19, 0.15), /* Rode ambient glow rond de kaart op hover */
      inset 0 0 0 1px rgba(255,255,255,0.15);
  }

  .liquid-bg-img {
    position: absolute;
    inset: -20px; /* Overshoot voor Parallax / Blur bleed */
    width: calc(100% + 40px);
    height: calc(100% + 40px);
    z-index: 1;
  }
  
  .liquid-bg-img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 1.2s cubic-bezier(0.16, 1, 0.3, 1), filter 0.8s ease;
    filter: blur(0px) brightness(1);
  }

  .liquid-card:hover .liquid-bg-img img {
    transform: scale(1.08);
    filter: blur(4px) brightness(0.85); /* Subtiele waas op de hele image tijdens hover */
  }

  /* De echte LIQUID OVERLAY (nu alleen op onderste helft) */
  .liquid-overlay {
    position: absolute;
    inset: auto -10px -10px -10px; /* Alleen randen onder overslaan */
    height: 65%; /* Bedekt alleen de onderste 65% van de kaart */
    z-index: 2;
    overflow: hidden;
    /* Een diepe gradient die het glas-effect creÃ«ert */
    background: linear-gradient(
      180deg, 
      rgba(15, 15, 17, 0) 0%, 
      rgba(15, 15, 17, 0.6) 40%, 
      rgba(15, 15, 17, 0.95) 100%
    );
    /* Vervoeg de bovenkant zodat blur/zwart zacht invalt (geen harde rand) */
    -webkit-mask-image: linear-gradient(to bottom, transparent 0%, black 25%);
    mask-image: linear-gradient(to bottom, transparent 0%, black 25%);
    transition: background 0.6s ease;
  }

  /* Het blur effect scheiden we veilig naar de pseudo-layer om rendering bugs (Safari) te voorkomen */
  .liquid-overlay::before {
    content: '';
    position: absolute;
    inset: 0;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    transition: backdrop-filter 0.6s ease, -webkit-backdrop-filter 0.6s ease;
    will-change: filter;
  }

  .liquid-card:hover .liquid-overlay {
    /* Op hover wordt het "glas" helderder/vloeibaarder aan bovenkant  */
    background: linear-gradient(
      180deg, 
      rgba(15, 15, 17, 0) 0%, 
      rgba(15, 15, 17, 0.3) 40%,
      rgba(15, 15, 17, 0.8) 100%
    );
  }

  .liquid-card:hover .liquid-overlay::before {
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
  }

  /* Extra Liquid Shine Effect (bewegende lichtlijn op hover) */
  .liquid-overlay::after {
    content: '';
    position: absolute;
    top: 0;
    left: -150%;
    width: 60%;
    height: 100%;
    background: linear-gradient(to right, rgba(255,255,255,0) 0%, rgba(255,255,255,0.08) 50%, rgba(255,255,255,0) 100%);
    transform: skewX(-20deg);
    transition: left 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 3;
    pointer-events: none;
    will-change: left;
  }

  .liquid-card:hover .liquid-overlay::after {
    left: 200%; /* Swipe de shine over het glas heen */
  }

  /* --- CONTENT STYLING --- */
  .liquid-content {
    position: relative;
    z-index: 4; /* Boven de liquid layers */
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end; /* Push the content-bottom to the bottom */
    padding: 3rem 2.5rem;
  }

  .content-bottom {
    transform: translateY(20px); /* Start iets te laag */
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .liquid-card:hover .content-bottom {
    transform: translateY(0); /* Slide up into perfect liquid view */
  }

  .liquid-content h3 {
    color: #ffffff;
    font-family: var(--font-heading, sans-serif);
    font-size: 1.8rem;
    font-weight: 500;
    margin-bottom: 0.8rem;
    letter-spacing: -0.01em;
  }

  .liquid-desc {
    color: rgba(255, 255, 255, 0.6);
    font-size: 1rem;
    line-height: 1.7;
    margin-bottom: 2rem;
    opacity: 0; /* Verborgen rust */
    transform: translateY(10px);
    transition: all 0.4s ease;
  }

  .liquid-card:hover .liquid-desc {
    opacity: 1; /* Fade in als je door het water kijkt */
    transform: translateY(0);
    transition-delay: 0.1s;
  }

  /* --- BUTTON STYLING (Hero Match) --- */
  .mt-4 { margin-top: 1rem; }
  
  .btn-pill {
    display: inline-flex;
    padding: 0.8rem 1.8rem;
    border-radius: 40px;
    font-family: var(--font-heading, sans-serif);
    font-weight: 600;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    align-items: center;
    gap: 0.5rem;
  }

  .btn-pill-outline-light {
    background-color: transparent;
    border: 1px solid rgba(255,255,255,0.4);
    color: #ffffff;
  }

  /* Hover effect happens when the whole card is hovered */
  .liquid-card:hover .btn-pill-outline-light {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(227, 6, 19, 0.4);
  }

  @media (max-width: 768px) {
    .liquid-services-section {
      padding: 6rem 0;
    }
    .title-liquid {
      font-size: 2.5rem;
    }
    .liquid-grid {
      grid-template-columns: 1fr;
    }
    /* Zorg dat tekst op mobiel wel altijd deels toonbaar is omdat er geen hover is */
    .content-bottom {
      transform: translateY(0);
    }
    .liquid-desc {
      opacity: 0.9;
      transform: translateY(0);
    }
  }
</style>
