<section class="hero" id="home">
  <div class="hero-bg">
    <!-- Using one of the extracted high-res real images -->
    <!-- Fallback image from their site -->
    <img src="https://www.rd-bouwgroep.nl/wp-content/uploads/2024/06/Banner-foto-2.jpg" alt="Luxe Badkamer" class="bg-img" />
    <div class="overlay"></div>
  </div>

  <div class="container hero-content">
    <div class="text-wrapper">
      <span class="label-badge">R&D Bouwgroep</span>
      <h1>
        Uw Partner in <br/>
        <span class="text-primary">Sanitair & Tegels</span>
      </h1>
      <p>
        Waar luxe en comfort samenkomen. Wij realiseren uw droombadkamer en wellnessruimte met oog voor detail en vakmanschap.
      </p>
      <div class="btn-group">
        <a href="/projecten" class="btn">Bekijk Projecten</a>
        <a href="#contact" class="btn btn-outline" style="border-color: white; color: white;">Contact Opnemen</a>
      </div>
    </div>
  </div>
  
  <div class="scroll-down">
    <div class="line"></div>
    <span>Scroll</span>
  </div>
</section>

<style>
  .hero {
    position: relative;
    height: 100vh;
    min-height: 700px;
    display: flex;
    align-items: center;
    color: white;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .bg-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    animation: zoomIn 20s infinite alternate;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.4) 60%, transparent 100%);
  }

  .hero-content {
    position: relative;
    z-index: 2;
    width: 100%;
  }

  .text-wrapper {
    max-width: 700px;
  }

  .label-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: rgba(160, 10, 19, 0.2); /* Red tint */
    border-left: 4px solid var(--color-primary);
    font-weight: 600;
    text-transform: uppercase;
    margin-bottom: 2rem;
    backdrop-filter: blur(5px);
    letter-spacing: 1px;
    font-size: 0.9rem;
  }

  h1 {
    font-size: clamp(3rem, 5vw, 5rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
    font-weight: 800;
    color: white; /* Force white text */
  }

  p {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    opacity: 0.9;
    max-width: 550px;
    color: white; /* Force white text */
  }

  .btn-group {
    display: flex;
    gap: 1.5rem;
  }

  .scroll-down {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding-bottom: 2rem;
  }

  .scroll-down .line {
    width: 2px;
    height: 60px;
    background-color: white;
    position: relative;
    overflow: hidden;
  }

  .scroll-down .line::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-primary);
    animation: drop 2s infinite;
  }

  .scroll-down span {
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 2px;
  }

  @keyframes zoomIn {
    to { transform: scale(1.1); }
  }

  @keyframes drop {
    0% { transform: translateY(-100%); }
    100% { transform: translateY(100%); }
  }

  @media (max-width: 768px) {
    .hero { 
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: flex-start; /* Changed from center to bring content up */
      text-align: center;
      padding: 2rem 1rem;
    }
    .hero-content { 
      padding-top: 10rem; /* Stable offset for floating header */
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .label-badge {
      display: none; /* Hide brand label on mobile as requested */
    }
    .scroll-down {
      bottom: 7rem; /* Moved even higher as per user request */
    }
    .text-wrapper {
      max-width: 100%;
    }
    h1 {
      font-size: 2.75rem;
      margin-bottom: 1rem;
    }
    p {
      font-size: 1.1rem;
      margin: 0 auto 2.5rem;
    }
    .btn-group { 
      flex-direction: column; 
      align-items: stretch;
      width: 100%;
    }
    .btn {
      width: 100%;
    }
    .overlay {
      background: linear-gradient(to bottom, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.8) 100%);
    }
    .label-badge {
      margin-bottom: 1.5rem;
    }
  }
</style>
