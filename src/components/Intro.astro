---
interface Props {
  showButton?: boolean;
}
const { showButton = true } = Astro.props;
---

<section id="about" class="section">
  <div class="container">
    <div class="intro-grid">
      <div class="intro-text">
        <h4 class="text-primary">Over R&D Bouwgroep</h4>
        <h2>Waar Luxe en Comfort <br>Samenkomen</h2>
        <p class="lead">
          Uw specialist in badkamers, tegelwerk en zwembaden.
        </p>
        <p>
          R&D Bouwgroep renoveert complete badkamers en verzorgt hoogwaardig tegelwerk voor vloeren en wanden. 
          Daarnaast hebben wij ruime ervaring in installatiewerk en realiseren wij zelfs complete zwembaden. 
          Ons grote team van specialisten werkt met oog voor detail aan uw perfecte resultaat.
        </p>
        <div class="features">
          <div class="feature">
            <span class="check">✓</span>
            <span>Badkamer & Toilet Renovatie</span>
          </div>
          <div class="feature">
            <span class="check">✓</span>
            <span>Tegelwerk & Vloeren</span>
          </div>
          <div class="feature">
            <span class="check">✓</span>
            <span>Zwembaden & Wellness</span>
          </div>
          <div class="feature">
            <span class="check">✓</span>
            <span>Ervaring in Installatiewerk</span>
          </div>
        </div>
        {showButton && <a href="/over-ons" class="btn" style="margin-top: 2rem;">Meer over ons</a>}
      </div>

      <div class="intro-images">
        <div class="img-1">
          <img src="/RenD Persooneel/cinematic medewerker binnen aan het werk.jpeg" alt="R&D Vakman aan het werk" />
        </div>
        <div class="img-2">
          <img src="https://www.rd-bouwgroep.nl/wp-content/uploads/2024/06/zwart-marmer.jpg" alt="Marmer Detail" />
          <div class="exp-box">
            <span class="num">10+</span>
            <span class="txt">Jaar<br>Ervaring</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .intro-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  h4 {
    font-family: var(--font-body);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  h2 {
    margin-bottom: 1.5rem;
    color: var(--color-dark);
  }

  .lead {
    font-size: 1.25rem;
    color: var(--color-dark);
    font-weight: 600;
    margin-bottom: 1rem;
  }

  p {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .features {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .feature {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-weight: 500;
    color: var(--color-dark);
  }

  .check {
    color: var(--color-primary);
    font-weight: 800;
  }

  .intro-images {
    position: relative;
    height: 600px;
  }

  .img-1 {
    width: 70%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    border-radius: 4px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
  }

  .img-2 {
    width: 60%;
    position: absolute;
    bottom: 0;
    right: 0;
    z-index: 2;
    border: 8px solid white;
    border-radius: 4px;
    overflow: visible; /* Allow box to stick out */
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
  }
  
  .img-2 img {
    width: 100%;
  }

  .exp-box {
    position: absolute;
    bottom: 20px;
    left: -40px;
    background-color: var(--color-primary);
    color: white;
    padding: 1.5rem;
    text-align: center;
    box-shadow: 0 10px 20px rgba(160, 10, 19, 0.3);
  }

  .num {
    display: block;
    font-size: 2.5rem;
    font-weight: 800;
    line-height: 1;
  }

  .txt {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  @media (max-width: 900px) {
    .intro-grid { grid-template-columns: 1fr; }
    .intro-images { height: 400px; margin-top: 3rem; }
    h4 {
      display: none; /* Hide brand label on mobile as requested */
    }
  }
</style>
